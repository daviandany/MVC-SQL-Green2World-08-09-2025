            System.out.println("0 - Sair");
            System.out.print("Escolha uma op√ß√£o: ");
            opcao = sc.nextInt();
            sc.nextLine(); // Limpar o buffer


            switch (opcao) {
                case 1:
                    System.out.println("\nüìç Ecopontos dispon√≠veis:");
