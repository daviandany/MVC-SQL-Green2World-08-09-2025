        ecopontos.add("ECOESTA√á√ÉO CAMPO GRANDE - Av. Gov. Agamenon Magalh√£es, 4130");
        ecopontos.add("Ecoesta√ß√£o Torre - R. Ciclovia Rep√∫blica da Arg√©lia, 10");
        ecopontos.add("Ecoesta√ß√£o do Arruda - R. Farias Neves, 954-1002");


